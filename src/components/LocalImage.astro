---
export const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/**/*.{jpeg,jpg,png,gif}",
);

export function choImage(url: string | undefined) {
    if (!url) {
        return "";
    }

    if (url.startsWith("http")) {
        return url;
    }

    return images[url]();
}
